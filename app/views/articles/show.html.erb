<div class="container" style="margin-top: 2rem">
  <div class="text-center">
    <p class="article-title">
      <strong>Title:  </strong>
      <%= @article.title %>
    </p>
  </div>

  <p class="article-description">
    <%= simple_format @article.body %>
  </p>

  <div class="text-center">
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary form-button" %>
    <%= link_to 'Back', articles_path, class: "btn btn-link" %>
  </div>
  
  <br />
</div>

<div class="container">
  <%= render partial: "comments/comment_form", locals: {commentable: @article} %>
</div>

<div class="container">
  <h4>
    <span class="badge badge-secondary">
      Comments
    </span>
  </h4>
</div>

<div class="container" id="comments">
  <%= render @article.comments.where(parent_id: nil) %>
</div>

